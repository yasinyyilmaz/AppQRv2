<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Gölge Katmanı -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#33000000" /> <!-- Gölge rengi (siyah, %20 şeffaflık) -->
            <corners android:radius="30dp" /> <!-- Köşe yuvarlaklığı -->
            <padding
                android:bottom="2dp"
                android:left="0dp"
                android:right="0dp"
                android:top="0dp" /> <!-- Gölge ofseti -->
        </shape>
    </item>

    <!-- Border Katmanı -->
    <item>
        <shape android:shape="rectangle">
            <stroke
                android:width="0.5dp"
                android:color="#bebebe" /> <!-- Border rengi ve kalınlığı -->
            <corners android:radius="10dp" /> <!-- Köşe yuvarlaklığı -->
        </shape>
    </item>
    <!-- Buton Katmanı -->
    <item
        android:bottom="0.5dp"
        android:left="0.5dp"
        android:right="0.5dp"
        android:top="0.5dp">
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" /> <!-- Buton rengi -->
            <corners android:radius="25dp" /> <!-- Köşe yuvarlaklığı -->
        </shape>
    </item>

</layer-list>